{
	"compilerOptions": {
		"outDir": "dist",
		"module": "commonjs",
		"lib": ["es6"],
		"target": "es2019",
		"esModuleInterop": true,
		"sourceMap": true,
		"rootDirs": ["src", "tests"],
		"baseUrl": "./",
		"paths": {
			"@config/*": ["src/config/*"],
			"@modules/*": ["src/modules/*"],
			"@shared/*": ["src/shared/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["src", "tests"],
	"exclude": []
}
