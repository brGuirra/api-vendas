{
	"name": "nodejs-boilerplate",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"prepare": "husky install",
		"dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/shared/http/server.ts",
		"orm": "ts-node-dev ./node_modules/typeorm/cli.js",
		"orm:create": "yarn orm migration:create -n",
		"orm:run": "yarn orm migration:run",
		"test": "jest --passWithNoTests --silent --noStackTrace --runInBand --no-cache",
		"test:verbose": "jest --passWithNoTests --runInBand",
		"test:unit": "yarn test --watch",
		"test:staged": "yarn test --findRelatedTests",
		"test:ci": "yarn test --coverage"
	},
	"keywords": [],
	"author": "Bruno Guirra",
	"license": "UNLICENSED",
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/express": "^4.17.13",
		"@types/jest": "^28.1.1",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/multer": "^1.4.7",
		"git-commit-msg-linter": "^4.1.3",
		"husky": "^8.0.1",
		"jest": "^28.1.1",
		"lint-staged": "^13.0.1",
		"ts-jest": "^28.0.5",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.0.0",
		"typescript": "^4.7.3",
		"xo": "^0.50.0"
	},
	"dependencies": {
		"@types/cors": "^2.8.12",
