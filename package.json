		"express-async-errors": "^3.1.1",
		"jsonwebtoken": "^8.5.1",
		"multer": "^1.4.5-lts.1",
		"pg": "^8.7.3",
		"reflect-metadata": "^0.1.13",
		"typeorm": "0.2.29"
	},
